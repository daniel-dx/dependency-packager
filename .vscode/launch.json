{
    "configurations": [
        {
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "name": "nodemon",
          "program": "${workspaceFolder}/dist/packager",
          "request": "launch",
          "restart": true,
          "runtimeExecutable": "nodemon",
          "skipFiles": [
            "<node_internals>/**"
          ],
          "type": "pwa-node",
          "env": {
            "LOCAL": "true"
          }
        }
    ]
}
